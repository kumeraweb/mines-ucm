      <a
        href={LINKS.call()}
        data-cta="llamar"
        aria-label={`Llamar a ${SITE.name}`}
        class="btn-ghost text-base px-8 py-3 font-semibold shadow-md hover:scale-105 transition"
      >
        Llamar a la ejecutiva 
      </a>
    </div>

    <!-- IDENTIFICACIN EJECUTIVA -->
    <div class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 max-w-md mx-auto">
      <div class="flex flex-col items-center text-center">
        <p class="text-gray-600 text-sm mb-1">Ejecutiva autorizada UCM</p>

        <!-- Tel茅fono -->
        <a href={LINKS.call()} data-cta="llamar" class="text-[#D62828] font-semibold">
          +56 {SITE.phone}
        </a>

        <!-- Email -->
        <a href={`mailto:${SITE.email}`} class="text-[#2A3E63] text-sm mt-1 hover:underline">
          {SITE.email}
        </a>

        <p class="text-xs text-gray-500 mt-4 max-w-xs leading-snug">
          Este canal est谩 destinado exclusivamente a consultas comerciales y contrataci贸n de planes
